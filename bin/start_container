#!/usr/bin/env bash
set -e -u -o pipefail

service="$1"
tag="${2:-stable}"
base="centos"
install_type="source"
registry="192.5.87.124:5000"
image="kolla/$base-$install_type-$service"

exec docker run --rm \
  -v "/etc/kolla/$service:/var/lib/kolla/config_files" \
  -v "/etc/kolla/policies:/var/lib/kolla/policies" \
  -v "/var/log/$service:/var/log/$service" \
  -e KOLLA_CONFIG_STRATEGY="COPY_ALWAYS" \
  "$registry/$image:$tag"
