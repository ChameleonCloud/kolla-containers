#!/usr/bin/env bash
set -e -u -o pipefail

service="${1:-}"
tag="${2:-stable}"

if [[ -z "$service" || "$service" == "-h" || $service == "--help" ]]; then
  cat <<USAGE
Usage: $0 <service> [tag]

Runs a service container, optionally at a given tag (uses "stable" by default.)

Examples:
  # Run Horizon service
  $0 horizon

  # Run Nova Compute service at tag "ocata"
  $0 nova-compute ocata
USAGE
  exit 1
fi

base="centos"
install_type="source"
registry="192.5.87.124:5000"
image="kolla/$base-$install_type-$service"

exec docker run --rm \
  -v "/etc/kolla/$service:/var/lib/kolla/config_files" \
  -v "/etc/kolla/policies:/var/lib/kolla/policies" \
  -v "/var/log/$service:/var/log/$service" \
  -e KOLLA_CONFIG_STRATEGY="COPY_ALWAYS" \
  "$registry/$image:$tag"
