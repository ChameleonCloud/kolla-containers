{% extends parent_template %}

# NOTE(jason): There are severl hacks for an issue w/ pbr, which
# I haven't found the root cause for yet.
# We must set a version so PBR doesn't try to detect it via Git tags or setup.cfg;
# This doesn't seem to work very well when we pull sources in via Git.
# Such tags make sense to be the next dev version following the most recent tag
# on the stable release branch. Yes, it sucks. See PBR_VERSION.

#########
# Blazar
#########

{% block blazar_base_header %}
ENV PBR_VERSION=4.0.2-chameleon
{% endblock %}

# See "blazar-manager-additions-extra" section in kolla-build.conf
{% block blazar_manager_footer %}
ADD additions-archive /
RUN cp -R /additions/extra/* /etc/blazar/ \
  && chown -R blazar: /etc/blazar \
  && ln -s /etc/blazar/blazar-manager/hooks/on_before_end.py /usr/local/bin/blazar_before_end_action_email
{% endblock %}

# TODO [jca 2018-01-24]:
# - remove blazarclient when we add blazarclient to the base packages
#   on kolla upstream. There is no reason not to have it there.
{% set openstack_base_pip_packages_append = [
  'python-blazarclient'
] %}

#########
# Doni
#########

{% block doni_base_header %}
ENV PBR_VERSION=1.0.0-chameleon
{% endblock %}

{% block doni_worker_header %}
# Force upgrade PyJWT so that balena-sdk dependencies can be satisfied.
# The requirements repo has a constraint on PyJWT so we have to install both
# separately to avoid getting downgraded.
RUN pip --no-cache-dir install --upgrade PyJWT>=2.0.0 balena-sdk
{% endblock %}

#########
# Heat
#########

{% block heat_base_header %}
ENV PBR_VERSION=13.1.10-chameleon
{% endblock %}

#########
# Horizon
#########

{% block horizon_header %}
ENV PBR_VERSION=16.2.2-chameleon
{% endblock %}

# Add chameleoncloud theme via additions
# See "horizon-additions-theme-chameleoncloud" section in kolla-build.conf
{% block horizon_footer %}
ADD additions-archive /
RUN mkdir -p /etc/openstack-dashboard/themes/chameleoncloud \
  && cp -R /additions/theme-chameleoncloud/*/* /etc/openstack-dashboard/themes/chameleoncloud/ \
  && chown -R horizon: /etc/openstack-dashboard/themes

RUN pip --no-cache-dir install --upgrade \
  git+https://github.com/ChameleonCloud/python-blazarclient.git@chameleoncloud/stable/train#egg=python-blazarclient
{% endblock %}

##########
# Ironic
##########

{% block ironic_base_header %}
ENV PBR_VERSION=13.0.8-chameleon
{% endblock %}

##########
# Neutron
##########

{% block neutron_base_header %}
ENV PBR_VERSION=15.3.5-chameleon
{% endblock %}

# See "neutron-server-additions-extra" section in kolla-build.conf
{% block neutron_server_footer %}
{% if distro_python_version.startswith('3') %}
# TODO [ms 2022-03-03]:
# - This overrides the upper-constrained netmiko version in order to fix slow CLI connectivity on Dell OS10.
#   Conditional is due to python2 dependence in train-centos7. Remove this after xena upgrade.
RUN pip install netmiko==3.4.0
{% endif %}
ADD additions-archive /
RUN cp -R /additions/extra/neutron-server/* /etc/neutron/ \
  && (cd /var/lib/kolla/venv/lib/python{{ distro_python_version }}/site-packages/netmiko \
      && git apply -p2 /etc/neutron/patches/netmiko/*.patch)
{% endblock %}

##########
# Nova
##########

{% block nova_base_header %}
ENV PBR_VERSION=20.6.2-chameleon
{% endblock %}

# Install patched version of python-ironicclient
# NOTE(jason): Is this still necessary? Look at
{% block nova_compute_ironic_footer %}
RUN pip --no-cache-dir install --upgrade \
  git+https://github.com/ChameleonCloud/python-ironicclient.git@2.5.2#egg=python-ironicclient
{% endblock %}

##########
# Prometheus
##########

{% block prometheus_server_repository_version %}
ENV prometheus_version=2.3.2
{% endblock %}

##########
# Tunelo
##########

{% block tunelo_base_header %}
ENV PBR_VERSION=1.0.0-chameleon
{% endblock %}

######
# Zun
######

{% block zun_base_header %}
ENV PBR_VERSION=4.0.1-chameleon
{% endblock %}

# NOTE(jason): Remove this past Victoria; kubernetes 12.x is needed for zun-compute-k8s
{% block zun_compute_k8s_footer %}
RUN pip --no-cache-dir install --upgrade kubernetes==12.0.0
{% endblock %}
